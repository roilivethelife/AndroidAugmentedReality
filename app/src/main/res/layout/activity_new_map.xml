<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:roi="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="?android:dividerHorizontal"
    android:orientation="vertical"
    android:showDividers="middle"
    tools:context="com.example.roi.climaar.menus.editdespacho.EditDespachoActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_new_map"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingEnd="16dp"
                android:paddingStart="16dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingTop="16dp"
                    android:text="Propiedades despacho"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp" />

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />
            </LinearLayout>

            <com.example.roi.climaar.menus.AttributeListItem
                android:id="@+id/despachoAttributeNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                roi:title="Nombre despacho" />

            <com.example.roi.climaar.menus.AttributeListItem
                android:id="@+id/despachoAttributeDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                roi:title="Descripción" />

            <com.example.roi.climaar.menus.AttributeListItem
                android:id="@+id/despachoAttributeNumDespacho"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                roi:title="Nº de habitación" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingEnd="16dp"
                android:paddingStart="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingTop="16dp"
                    android:text="Tamaño del despacho"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />
            </LinearLayout>

            <com.example.roi.climaar.menus.AttributeListItem
                android:id="@+id/despachoAttributeTamX"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                roi:title="Ancho" />

            <com.example.roi.climaar.menus.AttributeListItem
                android:id="@+id/despachoAttributeTamY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                roi:title="Altura" />

            <com.example.roi.climaar.menus.AttributeListItem
                android:id="@+id/despachoAttributeTamZ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                roi:title="Longitud" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingEnd="16dp"
                android:paddingStart="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingTop="16dp"
                    android:text="Posición marcador"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />
            </LinearLayout>

            <com.example.roi.climaar.menus.AttributeListItem
                android:id="@+id/despachoAttributeMarkerX"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                roi:title="Posición eje X" />

            <com.example.roi.climaar.menus.AttributeListItem
                android:id="@+id/depachoAttributeMarkerY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                roi:title="Posición eje Y" />

            <com.example.roi.climaar.menus.AttributeListItem
                android:id="@+id/depachoAttributeMarkerZ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                roi:title="Posición eje Z" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingEnd="16dp"
                android:paddingStart="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingTop="16dp"
                    android:text="Elementos de climatización"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />
            </LinearLayout>

            <com.example.roi.climaar.menus.editdespacho.ElementosListView
                android:id="@+id/despachoAttributeConfigElementosView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            </LinearLayout>

    </ScrollView>




</LinearLayout>